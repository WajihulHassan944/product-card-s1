<div id="loadingAnimation" class="loading-container">
  <div class="loading-spinner"></div>
</div>




<script>
var orderForm = document.getElementById("orderFormContainer");
var itemNameInput = document.getElementById("itemName");

var shippingFee = document.getElementById("shippingFee");
var tshirtType = document.getElementById("tshirtType");
var tshirtSize = document.getElementById("tshirtSize");
var quantity = document.getElementById("quantity");

var userNameInput = document.getElementById("userName");
var userAddressInput = document.getElementById("userAddress");
var userEmailInput = document.getElementById("userEmail2");
var userPhoneInput = document.getElementById("userNumber");
var orderFormSubmit = document.getElementById("orderFormSubmit");
var loadingAnimation = document.getElementById("loadingAnimation");
var orderButtons = document.getElementsByClassName("orderButton");
 const orderFormImage = document.getElementById("orderFormImage");
 const body = document.querySelector("body");
 
 
for (var i = 0; i < orderButtons.length; i++) {
  orderButtons[i].addEventListener("click", function() {
      orderForm.style.display = "flex";
	   var productName = event.target.getAttribute("data-product");
       itemNameInput.value = productName;
	   
	    const imageContainer = this.closest(".col-4").querySelector(".image-container");
      const imgSrc = imageContainer.querySelector("img").src;
      
      orderFormImage.innerHTML = `<img src="${imgSrc}" alt="Selected Product Image" class="orderFormimg">`;
	   document.getElementById("imageURL").value = imgSrc;
	 
  });
}

orderFormSubmit.addEventListener("submit", function(event) {
  event.preventDefault(); // Prevent default form submission

  if (itemNameInput === "" || userNameInput === "" || userEmailInput === "" || userPhoneInput.value === "" || userAddressInput.value === "") {
    alert("Please fill in all fields.");
    return;
  }
loadingAnimation.style.display = "block";
  var formData = {
    itemName: itemNameInput.value,
	
	shipping: shippingFee.value,
	tshirtType: tshirtType.value,
	quantity: quantity.value,
	tshirtSize: tshirtSize.value,
	
    userName: userNameInput.value,
    userAddress: userAddressInput.value,
    userEmail: userEmailInput.value ,
	phone: userPhoneInput.value,
	imageUrl: document.getElementById("imageURL").value,
	
  };

  fetch("https://easy-dungarees-bee.cyclic.cloud/submit-order", {
    method: "POST",
    headers: {
      "Content-Type": "application/json"
    },
    body: JSON.stringify(formData)
  })
  .then(function(response) {
    if (response.ok) {
      alert("Order submitted successfully.");
	  loadingAnimation.style.display = "none";
	   orderForm.style.display = "none";
    } else {
      alert("Error submitting order.");
	  loadingAnimation.style.display = "none";
    }
  })
  .catch(function(error) {
    alert("Error submitting order.");
	loadingAnimation.style.display = "none";
    console.error(error);
  });
});

var crosssymbolone = document.getElementById("crosssymbolone");
crosssymbolone.addEventListener("click", function() {
  orderForm.style.display = "none";
  body.style.overflow = "auto";
});

</script>


